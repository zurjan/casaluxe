<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="/css/admin.css" rel="stylesheet" />
</head>
<body>
    <% include admin/nav %> <!-- Inkludera navigeringen här -->
    <div class="container">
        <h1>Admin Dashboard</h1>
        <a href="/admin/products/add" class="add-product-btn">Lägg till produkt</a>
        <h2>Produkter</h2>
        <div>
            <% if (products.length === 0) { %>
                <p>Inga produkter tillagda än.</p>
            <% } else { %>
                <% products.forEach(product => { %>
                    <div class="product">
                        <h3><%= product.name %></h3>
                        <p><%= product.description %></p>
                        <p>Pris: <%= product.price %> SEK</p>
                        <a href="/admin/products/edit/<%= product.id %>">Redigera</a>
                        <form action="/admin/products/delete/<%= product.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="delete-btn">Ta bort</button>
                        </form>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>
</body>
</html>
