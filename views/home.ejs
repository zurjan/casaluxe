  <form action="/" method="GET">

    <label for="sort">Sort By:</label>
    <select name="sort" id="sort">
      <option value="">Pris</option>
      <option value="low-to-high">Pris:Lägst till högst</option>
      <option value="high-to-low">Pris: Högst till lägst</option>
    </select>


    <label for="slug">Kategori:</label>
    <select name="slug" id="slug">
      <option value="">Färger</option>
      <option value="Soffa-1">Mörkgrå-Soffa</option>
      <option value="Soffa-2">Grå-Soffa</option>
      <option value="Soffa-3">Röd-Soffa</option>
      <option value="Soffa-4">Beige-Soffa</option>
      <option value="Soffa-5">Blå-Soffa</option>
      <option value="Soffa-6">Svart-Soffa</option>
      <option value="Soffa-7">Vit-Soffa</option>
      <option value="Soffa-8">Turkos-Soffa</option>
    </select>



    <button type="submit">Filtrera</button>
    <button type="button" id="clear-filters">Rensa Filter</button>
  </form>

  <script>
    document.getElementById("clear-filters").addEventListener("click", function () {
      document.getElementById("sort").value = "";
      document.getElementById("slug").value = "";

      fetch(`/products`)  // Skicka en förfrågan utan filterparametrar
        .then(response => response.json())
        .then(data => {
          const productGrid = document.querySelector(".product-grid");
          productGrid.innerHTML = ""; // Rensa nuvarande produkter

          data.forEach(product => {
            const productCard = `
          <div class="product-card">
            <a href="product.ejs">
              <img src="/img/products/${product.image}" alt="${product.name}">
            </a>
            <h2>${product.name}</h2>
            <p class="price">${product.price} kr</p>
            <div class="icons">
              <button class="wishlist"><i class="fa fa-shopping-basket"></i></button>
              <button class="home"><i class="fa fa-heart"></i></button>
            </div>
          </div>`;
            productGrid.innerHTML += productCard;
          });
        });
    });

  </script>

  <!-- main och produkt-grid -->

  <div class="product-grid">
    <% products.forEach(product=> { %>
